{
  "name": "readify",
  "version": "2.0.2",
  "author": "coderaiser <mnemonic.enemy@gmail.com> (https://github.com/coderaiser)",
  "description": "Read directory content with file attributes: size, date, owner, mode",
  "homepage": "http://github.com/coderaiser/readify",
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/readify.git"
  },
  "config": {
    "filer": "node_modules/filer/dist/filer.min.js"
  },
  "scripts": {
    "bundle": "browserify lib/readify.js -s readify -u nicki --ig true > dist/readify.js",
    "build": "npm run bundle && npm run minify",
    "minify": "minify dist/readify.js > dist/readify.min.js",
    "build:filer": "cat $npm_package_config_filer dist/readify.js > dist/readify.filer.js",
    "build:filer:min": "cat $npm_package_config_filer dist/readify.min.js > dist/readify.filer.min.js",
    "build:all": "redrun build build:filer build:filer:min",
    "wisdom": "npm run build:all",
    "codestyle": "jshint lib test && jscs --esnext lib test",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "test": "tape test/*.js"
  },
  "dependencies": {
    "execon": "~1.2.0",
    "format-io": "~0.9.4",
    "nicki": "~1.2.2",
    "shortdate": "~1.2.0",
    "squad": "~1.1.0"
  },
  "keywords": [
    "read",
    "directory"
  ],
  "license": "MIT",
  "main": "lib/readify.js",
  "devDependencies": {
    "browserify": "^13.0.0",
    "coveralls": "^2.11.6",
    "filer": "^0.0.44",
    "jscs": "^3.0.3",
    "jshint": "^2.9.1",
    "minify": "^2.0.3",
    "nyc": "^7.0.0",
    "redrun": "^4.0.0",
    "sinon": "^1.17.3",
    "tape": "^4.2.1"
  }
}
