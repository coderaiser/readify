{
  "name": "readify",
  "version": "4.0.1",
  "author": "coderaiser <mnemonic.enemy@gmail.com> (https://github.com/coderaiser)",
  "description": "Read directory content with file attributes: size, date, owner, mode",
  "homepage": "http://github.com/coderaiser/readify",
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/readify.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "compile": "babel lib -d legacy/lib",
    "build": "redrun compile legacy:*",
    "wisdom": "npm run build",
    "lint": "redrun codestyle lint:*",
    "lint:eslint": "eslint lib test",
    "codestyle": "jshint lib test && jscs --esnext lib test",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "test": "tape test/*.js",
    "watch:coverage": "npm run watcher -- npm run coverage",
    "watch:test": "npm run watcher -- npm test",
    "watcher": "nodemon -w test -w lib --exec",
    "legacy:index": "echo \"module.exports = require('./lib/readify');\" > legacy/index.js"
  },
  "dependencies": {
    "currify": "^2.0.0",
    "es6-promisify": "^5.0.0",
    "execon": "^1.2.0",
    "format-io": "^0.9.4",
    "nicki": "^2.0.1",
    "shortdate": "^1.2.0",
    "zames": "^1.0.0"
  },
  "keywords": [
    "read",
    "directory"
  ],
  "license": "MIT",
  "main": "lib/readify.js",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "coveralls": "^2.11.6",
    "eslint": "^3.10.2",
    "jscs": "^3.0.3",
    "jshint": "^2.9.1",
    "minifyify": "^7.3.3",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "redrun": "^5.0.1",
    "sinon": "^1.17.3",
    "tape": "^4.2.1"
  }
}
