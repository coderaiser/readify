{
  "name": "readify",
  "version": "5.0.4",
  "author": "coderaiser <mnemonic.enemy@gmail.com> (https://github.com/coderaiser)",
  "description": "Read directory content with file attributes: size, date, owner, mode",
  "homepage": "http://github.com/coderaiser/readify",
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/readify.git"
  },
  "scripts": {
    "lint": "redrun codestyle lint:*",
    "lint:eslint:lib": "eslint lib",
    "lint:eslint:test": "eslint -c .eslintrc.test test --no-eslintrc",
    "codestyle": "jshint lib test && jscs --esnext lib test",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "test": "tape test/*.js",
    "watch:coverage": "npm run watcher -- npm run coverage",
    "watch:test": "npm run watcher -- npm test",
    "watcher": "nodemon -w test -w lib --exec"
  },
  "dependencies": {
    "@cloudcmd/formatify": "^1.0.0",
    "@cloudcmd/sortify": "^1.0.0",
    "currify": "^2.0.0",
    "es6-promisify": "^6.0.0",
    "execon": "^1.2.0",
    "format-io": "^0.9.4",
    "nicki": "^3.0.0",
    "shortdate": "^1.2.0",
    "zames": "^1.0.0"
  },
  "keywords": [
    "read",
    "file",
    "directory",
    "stat",
    "size",
    "name",
    "date",
    "owner",
    "uid",
    "format"
  ],
  "license": "MIT",
  "main": "lib/readify.js",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-plugin-node": "^6.0.0",
    "jscs": "^3.0.3",
    "jshint": "^2.9.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "redrun": "^5.0.1",
    "sinon": "^4.0.0",
    "tape": "^4.2.1"
  }
}
